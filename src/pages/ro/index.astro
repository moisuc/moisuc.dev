---
import Layout from '../../layouts/Layout.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import ContactForm from '../../components/ContactForm.astro';
import { getTranslations } from '../../i18n/translations.js';

const lang = 'ro';
const t = getTranslations(lang);
---

<Layout title="Moisuc Catalin — Dezvoltator Backend" lang={lang}>
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-void/80 backdrop-blur-md border-b border-border/50">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="font-display font-bold text-xl hover:text-accent transition-colors">
        moisuc<span class="text-accent">.dev</span>
      </a>
      <div class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-sm text-muted hover:text-white transition-colors">{t.nav.about}</a>
        <a href="#skills" class="text-sm text-muted hover:text-white transition-colors">{t.nav.skills}</a>
        <a href="#projects" class="text-sm text-muted hover:text-white transition-colors">{t.nav.projects}</a>
        <a href="#contact" class="text-sm text-muted hover:text-white transition-colors">{t.nav.contact}</a>
      </div>
      <div class="flex items-center gap-4">
        <LanguageSwitcher currentLang={lang} />
        <a href="#contact" class="hidden md:inline-flex items-center gap-2 px-4 py-2 bg-accent/10 border border-accent/30 rounded-full text-accent text-sm font-medium hover:bg-accent/20 transition-all">
          <span class="w-2 h-2 bg-accent rounded-full animate-pulse-slow"></span>
          {t.nav.available}
        </a>
      </div>
    </div>
  </nav>

  <main>
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center pt-20 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <div class="opacity-0 animate-slide-up stagger-1">
          <p class="font-mono text-accent text-sm mb-6 tracking-wider">
            <span class="text-muted">&lt;</span>{t.hero.tag}<span class="text-muted">/&gt;</span>
          </p>
        </div>
        
        <h1 class="font-display font-extrabold text-5xl md:text-7xl lg:text-8xl mb-6 opacity-0 animate-slide-up stagger-2">
          <span class="block">Moisuc</span>
          <span class="block bg-gradient-to-r from-white via-zinc-300 to-zinc-500 bg-clip-text text-transparent">Catalin</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-muted max-w-2xl mx-auto mb-8 opacity-0 animate-slide-up stagger-3" set:html={t.hero.subtitle} />
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 opacity-0 animate-slide-up stagger-4">
          <a href="#projects" class="group px-8 py-4 bg-accent text-void font-semibold rounded-lg hover:bg-accent/90 transition-all flex items-center gap-2">
            {t.hero.cta}
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="#contact" class="px-8 py-4 border border-border text-white font-semibold rounded-lg hover:border-zinc-600 hover:bg-surface-light transition-all">
            {t.hero.ctaSecondary}
          </a>
        </div>
        
        <div class="mt-16 flex items-center justify-center gap-8 text-muted opacity-0 animate-fade-in stagger-5">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-sm">{t.hero.location}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="text-sm">{t.hero.experience}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-32 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div>
            <p class="font-mono text-accent text-sm mb-4">{t.about.tag}</p>
            <h2 class="font-display font-bold text-4xl md:text-5xl mb-6">
              {t.about.title}<br/>
              <span class="text-muted">{t.about.titleAccent}</span>
            </h2>
            <div class="space-y-4 text-zinc-400 leading-relaxed">
              <p>{t.about.p1}</p>
              <p>{t.about.p2}</p>
              <p>{t.about.p3}</p>
            </div>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div class="p-6 bg-surface rounded-2xl border border-border hover:border-accent/30 transition-colors">
              <p class="font-display font-bold text-4xl text-accent mb-2">10+</p>
              <p class="text-muted text-sm">{t.about.stats.years}</p>
            </div>
            <div class="p-6 bg-surface rounded-2xl border border-border hover:border-accent/30 transition-colors">
              <p class="font-display font-bold text-4xl text-accent mb-2">250+</p>
              <p class="text-muted text-sm">{t.about.stats.users}</p>
            </div>
            <div class="p-6 bg-surface rounded-2xl border border-border hover:border-accent/30 transition-colors">
              <p class="font-display font-bold text-4xl text-accent mb-2">6</p>
              <p class="text-muted text-sm">{t.about.stats.sports}</p>
            </div>
            <div class="p-6 bg-surface rounded-2xl border border-border hover:border-accent/30 transition-colors">
              <p class="font-display font-bold text-4xl text-accent mb-2">∞</p>
              <p class="text-muted text-sm">{t.about.stats.learning}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="py-32 px-6 bg-surface/50">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="font-mono text-accent text-sm mb-4">{t.skills.tag}</p>
          <h2 class="font-display font-bold text-4xl md:text-5xl">
            {t.skills.title} <span class="text-muted">{t.skills.titleAccent}</span>
          </h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Backend -->
          <div class="p-8 bg-surface rounded-2xl border border-border group hover:border-accent/30 transition-all">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-4">{t.skills.backend}</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">PHP</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Laravel</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Python</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">REST APIs</span>
            </div>
          </div>
          
          <!-- Databases -->
          <div class="p-8 bg-surface rounded-2xl border border-border group hover:border-accent/30 transition-all">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-4">{t.skills.databases}</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">MySQL</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Redis</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">SQL</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Queues</span>
            </div>
          </div>
          
          <!-- Scraping -->
          <div class="p-8 bg-surface rounded-2xl border border-border group hover:border-accent/30 transition-all">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-4">{t.skills.scraping}</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Puppeteer</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Playwright</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Automation</span>
            </div>
          </div>
          
          <!-- Frontend -->
          <div class="p-8 bg-surface rounded-2xl border border-border group hover:border-accent/30 transition-all">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-4">{t.skills.frontend}</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">JavaScript</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">HTML</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">CSS</span>
            </div>
          </div>
          
          <!-- Real-Time -->
          <div class="p-8 bg-surface rounded-2xl border border-border group hover:border-accent/30 transition-all">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-4">{t.skills.realtime}</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">WebSockets</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Events</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Telegram API</span>
            </div>
          </div>
          
          <!-- Learning -->
          <div class="p-8 bg-surface rounded-2xl border border-border group hover:border-accent/30 transition-all">
            <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-4">{t.skills.learning}</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-accent/10 rounded-full text-sm text-accent border border-accent/30">Python</span>
              <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Always Curious</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-32 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="font-mono text-accent text-sm mb-4">{t.projects.tag}</p>
          <h2 class="font-display font-bold text-4xl md:text-5xl">
            {t.projects.title} <span class="text-muted">{t.projects.titleAccent}</span>
          </h2>
        </div>
        
        <!-- OddsMath - Featured Project -->
        <div class="relative p-8 md:p-12 bg-surface rounded-3xl border border-border overflow-hidden group">
          <div class="absolute top-0 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
          
          <div class="relative grid md:grid-cols-2 gap-12 items-center">
            <div>
              <div class="flex items-center gap-3 mb-6">
                <span class="px-3 py-1 bg-accent/10 text-accent text-xs font-mono rounded-full border border-accent/30">{t.projects.liveProject}</span>
                <span class="px-3 py-1 bg-surface-light text-muted text-xs font-mono rounded-full border border-border">2024</span>
              </div>
              
              <h3 class="font-display font-bold text-3xl md:text-4xl mb-4">OddsMath</h3>
              
              <p class="text-zinc-400 mb-8 leading-relaxed">{t.projects.oddsmath.description}</p>
              
              <div class="grid grid-cols-2 gap-4 mb-8">
                <div class="p-4 bg-surface-light rounded-xl border border-border">
                  <p class="font-display font-bold text-2xl text-accent">250+</p>
                  <p class="text-muted text-sm">{t.projects.oddsmath.subscribers}</p>
                </div>
                <div class="p-4 bg-surface-light rounded-xl border border-border">
                  <p class="font-display font-bold text-2xl text-accent">4</p>
                  <p class="text-muted text-sm">{t.projects.oddsmath.bookmakers}</p>
                </div>
                <div class="p-4 bg-surface-light rounded-xl border border-border">
                  <p class="font-display font-bold text-2xl text-accent">6</p>
                  <p class="text-muted text-sm">{t.projects.oddsmath.sports}</p>
                </div>
                <div class="p-4 bg-surface-light rounded-xl border border-border">
                  <p class="font-display font-bold text-2xl text-accent">&lt;1s</p>
                  <p class="text-muted text-sm">{t.projects.oddsmath.latency}</p>
                </div>
              </div>
              
              <div class="flex flex-wrap gap-2 mb-8">
                <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Laravel</span>
                <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Redis</span>
                <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">MySQL</span>
                <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Puppeteer</span>
                <span class="px-3 py-1 bg-surface-light rounded-full text-sm text-zinc-300 border border-border">Telegram API</span>
              </div>
              
              <a href="https://new.oddsmath.com" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-void font-semibold rounded-lg hover:bg-accent/90 transition-all group">
                {t.projects.oddsmath.visitSite}
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
            
            <div class="relative">
              <div class="bg-void rounded-2xl border border-border overflow-hidden shadow-2xl">
                <div class="flex items-center gap-2 px-4 py-3 bg-surface-light border-b border-border">
                  <span class="w-3 h-3 rounded-full bg-red-500/80"></span>
                  <span class="w-3 h-3 rounded-full bg-yellow-500/80"></span>
                  <span class="w-3 h-3 rounded-full bg-green-500/80"></span>
                  <span class="ml-4 text-muted text-xs font-mono">odds-tracker.php</span>
                </div>
                <pre class="p-6 text-sm font-mono overflow-x-auto"><code class="text-zinc-400"><span class="text-accent">class</span> <span class="text-white">OddsTracker</span>
{
    <span class="text-accent">protected</span> <span class="text-muted">$redis</span>;
    <span class="text-accent">protected</span> <span class="text-muted">$bookmakers</span> = [<span class="text-yellow-400">4</span>];
    <span class="text-accent">protected</span> <span class="text-muted">$sports</span> = [<span class="text-yellow-400">6</span>];

    <span class="text-accent">public function</span> <span class="text-white">detectDrop</span>(<span class="text-muted">$event</span>)
    {
        <span class="text-muted">// Real-time odds analysis</span>
        <span class="text-accent">if</span> (<span class="text-muted">$this</span>-><span class="text-white">isSignificant</span>(<span class="text-muted">$event</span>)) {
            <span class="text-muted">$this</span>-><span class="text-white">notify</span>(<span class="text-muted">$event</span>);
        }
    }

    <span class="text-accent">public function</span> <span class="text-white">notify</span>(<span class="text-muted">$event</span>)
    {
        <span class="text-white">Telegram</span>::<span class="text-white">send</span>(<span class="text-muted">$event</span>);
    }
}</code></pre>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Additional Projects Grid -->
        <div class="grid md:grid-cols-2 gap-6 mt-8">
          <div class="p-8 bg-surface rounded-2xl border border-border hover:border-accent/30 transition-all group">
            <div class="flex items-center justify-between mb-4">
              <span class="px-3 py-1 bg-surface-light text-muted text-xs font-mono rounded-full border border-border">SCRAPING</span>
              <svg class="w-5 h-5 text-muted group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
              </svg>
            </div>
            <h3 class="font-display font-bold text-xl mb-2">{t.projects.scrapers.title}</h3>
            <p class="text-muted text-sm leading-relaxed">{t.projects.scrapers.description}</p>
          </div>
          
          <div class="p-8 bg-surface rounded-2xl border border-border hover:border-accent/30 transition-all group">
            <div class="flex items-center justify-between mb-4">
              <span class="px-3 py-1 bg-surface-light text-muted text-xs font-mono rounded-full border border-border">OPEN SOURCE</span>
              <a href="https://github.com/moisuc" target="_blank" rel="noopener noreferrer" class="text-muted group-hover:text-accent transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            </div>
            <h3 class="font-display font-bold text-xl mb-2">{t.projects.leetcode.title}</h3>
            <p class="text-muted text-sm leading-relaxed">{t.projects.leetcode.description}</p>
          </div>
        </div>
      </div>
